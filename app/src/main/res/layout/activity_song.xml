<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/playerPosition"
        android:layout_width="46dp"
        android:layout_height="18dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songSinger" />

    <TextView
        android:id="@+id/songSinger"
        android:layout_width="228dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/headphone" />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="237dp"
        android:layout_height="42dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <SeekBar
        android:id="@+id/seekBarTime"
        android:layout_width="224dp"
        android:layout_height="20dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toStartOf="@+id/playerPosition"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toEndOf="@+id/playerDuration"
        app:layout_constraintTop_toBottomOf="@+id/songSinger" />

    <TextView
        android:id="@+id/playerDuration"
        android:layout_width="46dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="00:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songSinger" />

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/btnRew"
        app:layout_constraintTop_toTopOf="@+id/btnRew"
        app:srcCompat="@drawable/ic_play" />

    <ImageView
        android:id="@+id/btnNextSong"
        android:layout_width="47dp"
        android:layout_height="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFf"
        app:layout_constraintTop_toTopOf="@+id/btnFf"
        app:srcCompat="@drawable/skip_next" />

    <ImageView
        android:id="@+id/btnFf"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/btnPlay"
        app:layout_constraintTop_toTopOf="@+id/btnPlay"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/btnRew"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/btnPreSong"
        app:layout_constraintTop_toTopOf="@+id/btnPreSong"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageView
        android:id="@+id/btnPreSong"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerDuration"
        app:srcCompat="@drawable/skip_previous" />
</androidx.constraintlayout.widget.ConstraintLayout>